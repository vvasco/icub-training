<application>
    <name>Tutorial yarp basics </name>

    <dependencies>
    </dependencies>

    <module>
        <name>yarp-basics</name>
        <parameters>--robot icub</parameters>
        <node>localhost</node>
    </module>
    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /image --x 0 --y 0 --RefreshTime 33 </parameters>
