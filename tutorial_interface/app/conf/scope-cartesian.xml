<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="2" carrier="tcp">
    <plot gridx="0"
          gridy="0"
          minval="50"
          maxval="250"
          bgcolor="White"
          title="Pixel coordinates">
        <graph remote="/controller-gaze/scope:o"
               index="0"
               color="Blue"
               type="lines"
               size="4" />
        <graph remote="/controller-gaze/scope:o"
               index="1"
               color="Blue"
               size="2"
               type="lines" />
        <graph remote="/controller-gaze/scope:o"
               index="2"
               color="Red"
               size="4"
               type="lines" />
        <graph remote="/controller-gaze/scope:o"
               index="3"
               color="Red"
               type="lines"
               size="2" />
    </plot>
    <plot gridx="0"
          gridy="1"
          minval="-10"
          maxval="10"
          bgcolor="White"
          title="Eyes tilt and pan">
        <graph remote="/controller-gaze/scope:o"
               index="4"
               color="Magenta"
               type="lines"
               size="4" />
        <graph remote="/controller-gaze/scope:o"
               index="5"
               color="Magenta"
               size="2"
               type="lines" />
    </plot>
    <plot gridx="1"
          gridy="0"
          minval="-5.0"
          maxval="5.0"
          bgcolor="White"
          title="Arm coordinates">
        <graph remote="/controller-cartesian/scope:o"
               index="0"
               color="Blue"
               type="lines"
               size="4" />
        <graph remote="/controller-cartesian/scope:o"
               index="1"
               color="Blue"
               size="2"
               type="lines" />
        <graph remote="/controller-cartesian/scope:o"
               index="2"
               color="Red"
               size="4"
               type="lines" />
        <graph remote="/controller-cartesian/scope:o"
               index="3"
               color="Red"
               type="lines"
               size="2" />
        <graph remote="/controller-cartesian/scope:o"
               index="4"
               color="Magenta"
               size="4"
               type="lines" />
        <graph remote="/controller-cartesian/scope:o"
               index="5"
               color="Magenta"
               type="lines"
               size="2" />
    </plot>
    <plot gridx="1"
          gridy="1"
          minval="0.0"
          maxval="200.0"
          bgcolor="White"
          title="Arm orientation">
        <graph remote="/controller-cartesian/scope:o"
               index="6"
               color="Black"
               type="lines"
               size="4" />
        <graph remote="/controller-cartesian/scope:o"
               index="7"
               color="Black"
               size="2"
               type="lines" />
    </plot>
</portscope>
